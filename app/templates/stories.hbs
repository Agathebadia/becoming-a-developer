<html id="page-stories">

  <nav></nav>

  <label for="order">Order by</label>
  <select name="Order by" id="list" onchange="getSelectedValue();">
    <option value="recent">Most recent publications</option>
    <option value="oldest">Oldest publications</option>
    <option value="name">Developers' name ASC</option>
    <option value="year asc">Developers since ASC</option>
    <option value="year desc">Developers since DESC</option>
  </select>

    {{#sortable-table data=@model as |table|}}
      <div class="stories">
        <ul class="results">
          {{log table}}
          {{#each @model as |story|}}
          <li><Story @story={{story}} /></li>
          {{/each}}
        </ul>
      </div>
    {{/sortable-table}}
</html>

<script>
  function getSelectedValue() {
      const selectedValue = document.getElementById('list').value;
      console.log(selectedValue);
    }
    getSelectedValue();
</script>
